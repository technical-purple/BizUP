<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal"
    tools:context=".CommunityFragment">

    <LinearLayout
        android:id="@+id/discord_nav_view"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/server_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_button"
            android:contentDescription="Server Icon"/>
<!--            android:src="@drawable/ic_server" -->

        <View
            android:layout_width="48dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginVertical="8dp" />

        <ImageView
            android:id="@+id/channel_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:contentDescription="Channel 1"/>
<!--            android:src="@drawable/ic_channel" -->

        <View
            android:layout_width="48dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginVertical="8dp" />

        <ImageView
            android:id="@+id/channel_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:contentDescription="Channel 2"/>
        <View
            android:layout_width="48dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginVertical="8dp" />

        <ImageView
            android:id="@+id/channel_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:contentDescription="Channel 3"/>



    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <include
            android:id="@+id/empty_channel_layout"
            layout="@layout/layout_empty_channel" />
    </FrameLayout>

</LinearLayout>